{
  "name": "revamp",
  "version": "1.0.0",
  "description": "Legacy browser compatibility proxy - Transform modern web for iOS 9+ (iPad 2) and older devices",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "revamp": "./dist/index.js"
  },
  "files": [
    "dist",
    "config",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lifeart/revamp.git"
  },
  "bugs": {
    "url": "https://github.com/lifeart/revamp/issues"
  },
  "homepage": "https://github.com/lifeart/revamp#readme",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "rm -rf .revamp-cache && tsc",
    "clean": "rm -rf dist .revamp-cache .revamp-certs coverage",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:unit": "vitest run",
    "test:unit:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "mock-server": "tsx --no-warnings tests/mock-server.ts",
    "lint": "echo 'No linter configured yet'",
    "prepublishOnly": "npm run build && npm run test:unit:run"
  },
  "keywords": [
    "proxy",
    "socks5",
    "http-proxy",
    "babel",
    "postcss",
    "legacy",
    "ios",
    "safari",
    "ipad",
    "ipod",
    "compatibility",
    "transpiler",
    "polyfill",
    "mitm",
    "ssl-interception"
  ],
  "author": "Alex Kanunnikov",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/babel__core": "^7.20.5",
    "@types/node": "^24.10.1",
    "@types/node-forge": "^1.3.14",
    "@types/sharp": "^0.32.0",
    "@vitest/coverage-v8": "^4.0.14",
    "domhandler": "^5.0.3",
    "playwright": "^1.57.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/ws": "^8.18.1",
    "cheerio": "^1.1.2",
    "esbuild": "^0.27.0",
    "node-forge": "^1.3.2",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.4.0",
    "sharp": "^0.34.5",
    "tinypool": "^2.0.0",
    "ws": "^8.18.3"
  }
}
